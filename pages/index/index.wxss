.navBox {
  display: flex;
  margin-top: 10rpx;
}
.navBox image {
  flex: 1;
  height: 130rpx;
}

.tabbarBox {
  display: flex;
  justify-content: space-around;
  height: 90rpx;
  font-size: 26rpx;
  font-weight: bolder;
  border-bottom: 2px solid red;
}
.tabbar-item {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  text-align: center;
}
.innerBox {
  width: 120rpx;
  height: 48rpx;
  line-height: 48rpx;
}
.active {
  background-color: red;
  color: white;
  border-radius: 10rpx;
}
.goodsList {
  position: absolute;
  top: 610rpx;
  bottom: 0;
  left: 0;
  right: 0;
  /* height: 570rpx; */
}
.discountTop, .welfare, .home, .buy {
  display: flex;
  flex-wrap: wrap;
}
.discountTopItem, .welfareItem, .homeItem, .buyItem {
  width: 48%;
  margin-left: 10rpx;
  margin-top: 20rpx;
}
.discountTopItem image, .welfareItem image, .homeItem image, .buyItem image {
  width: 350rpx;
  height: 200rpx;
}

.card {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.cardItem {
  width: 96%;
  height: 270rpx;
  margin-top: 20rpx;
}
.cardItem image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}